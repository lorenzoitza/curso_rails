<h1>Blogposts#new</h1>
<%= form_for @blog_post do |f| %>
  <div class="fields">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="fields">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit  %>
  </div>
<% end %>

<%= link_to "Back", blogposts_path %>
